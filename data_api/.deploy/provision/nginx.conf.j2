server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ http_domain }};

    ssl on;
    ssl_certificate_key /etc/letsencrypt/live/{{ http_domain }}/privkey.pem;
    ssl_certificate /etc/letsencrypt/live/{{ http_domain }}/fullchain.pem;

    add_header X-XSS-Protection "1; mode=block";
    add_header Strict-Transport-Security "max-age=86400";
    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options nosniff;

    location ~ \.(jpe?g|png|svg|css|js) {
        proxy_pass http://127.0.0.1:{{ service_port }};
        include proxy_params;

        add_header Cache-Control "public, immutable, max-age=315360000";
        add_header X-XSS-Protection "1; mode=block";
        add_header Strict-Transport-Security "max-age=86400";
        add_header X-Frame-Options "SAMEORIGIN";
        add_header X-Content-Type-Options nosniff;

        proxy_hide_header Cache-Control;
    }

    location / {
        proxy_pass http://127.0.0.1:{{ service_port }};
        include proxy_params;
    }
}

server {
    listen 80;
    listen [::]:80;

    server_name {{ http_domain }};

    location / {
        rewrite ^(.*)$ https://{{ http_domain }}$1 permanent;
    }
}
